# Example environment variables file
# Copy this file to .env and replace values with your own

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d
JWT_AUDIENCE=church-planner-api
JWT_ISSUER=church-planner

# RabbitMQ Configuration
RABBITMQ_USER=church_planner
RABBITMQ_PASSWORD=your_rabbitmq_password_here

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_CACHE_TTL=3600

# MongoDB Database Names
AUTH_DB_NAME=auth
CHURCH_DB_NAME=church
MEMBER_DB_NAME=member
EVENTS_DB_NAME=events

# Service Ports
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=3001
CHURCH_SERVICE_PORT=3002
MEMBER_SERVICE_PORT=3003
EVENTS_SERVICE_PORT=3004
CLIENT_PORT=3000

# Service URLs (Internal network)
AUTH_SERVICE_URL=http://auth-service:3001
CHURCH_SERVICE_URL=http://church-service:3002
MEMBER_SERVICE_URL=http://member-service:3003
EVENTS_SERVICE_URL=http://events-service:3004

# Public URLs
API_URL=http://localhost:8000
CLIENT_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Timeouts
PROXY_TIMEOUT=30000
SOCKET_TIMEOUT=30000 