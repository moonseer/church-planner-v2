# Service Configuration
NODE_ENV=development
PORT=3000
SERVICE_NAME=service-template

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/service-template

# Logging
LOG_LEVEL=debug

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d

# Service URLs (for service-to-service communication)
AUTH_SERVICE_URL=http://auth-service:3000
CHURCH_SERVICE_URL=http://church-service:3000
MEMBER_SERVICE_URL=http://member-service:3000
EVENT_SERVICE_URL=http://event-service:3000

# Redis Cache
REDIS_URL=redis://redis:6379

# RabbitMQ
RABBITMQ_URL=amqp://rabbitmq:5672

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100 