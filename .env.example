# Server Configuration
PORT=8080
NODE_ENV=development
HTTP_PORT=8081 # For production HTTP -> HTTPS redirect

# SSL Configuration (for production)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/church-planner

# JWT Configuration
# Generate a strong random secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace_with_64_char_hex_from_crypto_randomBytes
JWT_EXPIRE=1d

# Client Configuration
VITE_API_URL=http://localhost:8080/api

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Example environment variables
NODE_ENV=development

# Database settings
MONGODB_URI=mongodb://localhost:27017/church_planner

# Client URL for CORS
CLIENT_URL=http://localhost:3030

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Logging
LOG_FILE=logs/server.log

# Metrics
ENABLE_METRICS=true 