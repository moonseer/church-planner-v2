{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
} 