# Server Configuration
NODE_ENV=production
PORT=8080

# Database
MONGO_URI=mongodb://mongodb:27017/church_planner

# Authentication
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=12h
SESSION_SECRET=CHANGE_THIS_TO_A_DIFFERENT_SECURE_RANDOM_STRING

# Client
CLIENT_URL=https://churchplanner.example.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=prod@example.com
SMTP_PASS=CHANGE_THIS_TO_YOUR_SMTP_PASSWORD
SMTP_FROM=noreply@churchplanner.example.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL Configuration
SSL_ENABLED=true
SSL_KEY_PATH=/etc/ssl/private/churchplanner.key
SSL_CERT_PATH=/etc/ssl/certs/churchplanner.crt

# Security
CORS_ORIGIN=https://churchplanner.example.com
ENABLE_HELMET=true
CONTENT_SECURITY_POLICY=true 