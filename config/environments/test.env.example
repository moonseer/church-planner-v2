# Server Configuration
NODE_ENV=test
PORT=8081

# Database - Using in-memory MongoDB for testing
MONGO_URI=mongodb://localhost:27017/church_planner_test

# Authentication
JWT_SECRET=test_jwt_secret
JWT_EXPIRES_IN=1h
SESSION_SECRET=test_session_secret

# Client
CLIENT_URL=http://localhost:3000

# Rate Limiting - Disabled for tests
RATE_LIMIT_WINDOW=0
RATE_LIMIT_MAX=0

# Logging - Minimal logging for tests
LOG_LEVEL=error

# Email - Using test mail catcher
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@example.com
SMTP_PASS=testpassword
SMTP_FROM=noreply@test.com

# Feature Flags - All enabled for testing
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=true

# Monitoring - Disabled for tests
ENABLE_METRICS=false
METRICS_PORT=9091

# SSL Configuration - Disabled for tests
SSL_ENABLED=false

# Security - Minimal for tests
CORS_ORIGIN=*
ENABLE_HELMET=false
CONTENT_SECURITY_POLICY=false 