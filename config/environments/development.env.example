# Server Configuration
NODE_ENV=development
PORT=8080

# Database
MONGO_URI=mongodb://localhost:27017/church_planner_dev

# Authentication
JWT_SECRET=dev_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=1d
SESSION_SECRET=dev_session_secret_change_this_in_production

# Client
CLIENT_URL=http://localhost:3030

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=dev@example.com
SMTP_PASS=devpassword
SMTP_FROM=noreply@churchplanner.example.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090 